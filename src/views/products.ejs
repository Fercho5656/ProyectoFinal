<%- include('partials/_header')%>

    <div class="container-fluid pl-3">
        <div class="row mt-5">
            <div class="col-md-9 table-responsive">
                <table class="table table-bordered table-striped table-hover table-sm mx-auto w-auto">
                    <caption>Lista de productos</caption>
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">No.</th>
                            <th class="text-center">Nombre</th>
                            <th class="text-center">Código</th>
                            <th class="text-center">Precio</th>
                            <th class="text-center">Existencias</th>
                            <th class="text-center">Categoría</th>
                            <th class="text-center">Descripción</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if(data) { %>
                            <% for (let i = 0; i < data.length; i++) { %>
                                <tr>
                                    <td class="text-center">
                                        <%= (i + 1) %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].nombre %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].codigo %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].precio %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].existencias %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].nombreCategoria %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].descripcion %>
                                    </td>
                                    <td>
                                        <a href="/products/delete/<%= data[i].idProducto %>" class="btn btn-danger btn-block">Eliminar</a>
                                        <a href="/products/update/<%= data[i].idProducto %>" class="btn btn-warning btn-block">Actualizar</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-pl-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center mt-2">Añadir Producto</h3>
                    </div>
                    <div class="card-body">
                        <form action="/products/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="codigo" placeholder="Código" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" min="0.00" step="0.01" name="precio" placeholder="Precio" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" min="1" step="1" name="existencias" placeholder="Existencias" class="form-control">
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="idCategoria" id="idCategoria">
                                    <option disabled selected>Selecciona una Categoría</option>
                                    <% if(dataCategorias) { %>
                                        <% for (let i = 0; i < dataCategorias.length; i++) { %>
                                            <option value="<%= dataCategorias[i].idCategoria %>"> <%= dataCategorias[i].nombre %> </option>
                                        <%} %>
                                    <%}%>
                               </select>
                            </div>
                            <div class="form-group">
                                <input type="text" name="descripcion" placeholder="Descripción" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar Producto</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%- include('partials/_footer')%>