<%- include('partials/_header')%>

    <div class="container mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center mt-2">Actualizar Producto</h3>
                </div>
                <div class="card-body">
                    <form action="/products/update/<%= data[0].idProducto %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data[0].nombre %>" placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="codigo" value="<%= data[0].codigo %>" placeholder="Código" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" min="0.00" step="0.01" name="precio" value="<%= data[0].precio %>" placeholder="Precio" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" min="1" step="1" name="existencias" value="<%= data[0].existencias %>" placeholder="Existencias" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="idCategoria" value="<%= data[0].idCategoria %>" placeholder="Categoría" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion" value="<%= data[0].descripcion %>" placeholder="Descripción" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Actualizar Producto</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer')%>