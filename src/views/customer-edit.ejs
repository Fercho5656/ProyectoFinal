<%- include('partials/_header')%>

    <div class="container mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center mt-2">Actualizar Cliente</h3>
                </div>
                <div class="card-body">
                    <form action="/update/<%= data[0].idCliente %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nuevo Nombre" value="<%= data[0].nombre %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" placeholder="Nuevo Telefono" value="<%= data[0].telefono %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="domicilio" placeholder="Nuevo Domicilio" value="<%= data[0].domicilio %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="email" placeholder="Nuevo Email" value="<%= data[0].email %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="contacto" placeholder="Nuevo Contacto" value="<%= data[0].contacto %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="rfc" placeholder="Nuevo RFC" value="<%= data[0].rfc %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="observaciones" placeholder="Nuevas Observaciones" value="<%= data[0].observaciones %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Actualizar Cliente</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer')%>