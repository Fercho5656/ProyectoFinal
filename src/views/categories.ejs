<%- include('partials/_header')%>

    <div class="container-fluid pl-3">
        <div class="row mt-5">
            <div class="col-md-9 table-responsive">
                <table class="table table-bordered table-striped table-hover table-sm mx-auto w-auto">
                    <caption>Lista de categorías</caption>
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">No.</th>
                            <th class="text-center">Categoria</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if(data) { %>
                            <% for (let i = 0; i < data.length; i++) { %>
                                <tr>
                                    <td class="text-center">
                                        <%= (i + 1) %>
                                    </td>
                                    <td class="text-center">
                                        <%= data[i].nombre %>
                                    </td>
                                    <td class="text-center">
                                        <a href="/categories/delete/<%= data[i].idCategoria %>" class="btn btn-danger btn-block">Eliminar</a>
                                        <a href="/categories/update/<%= data[i].idCategoria %>" class="btn btn-warning btn-block">Actualizar</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-pl-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center pt-2">Añadir Categoria</h3>
                    </div>
                    <div class="card-body">
                        <form action="/categories/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre de la Categoría" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar Categoría</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer')%>